{
  "extends": "tsconfig-config-application/nextjs.json",
  "compilerOptions": {
    "allowJs": true,
    "plugins": [{ "name": "next" }],
    "baseUrl": ".",
    "paths": {
      "@tests-setup/*": ["./tests-setup/*"],
      "@tests/*": [ "./tests/*"]
    }
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    ".next/types/**/*.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}
